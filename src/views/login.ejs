<%- include('includes/head') %> <%- include('includes/naav') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-3">
      <h1 class="display-1 text-center">Cria Cont ou Entrar</h1>
      <p class="text-center lead">Faça Login ou crie sua conta abaixo</p>
      <%- include('includes/messages') %>

      <div class="row">
        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda não tem conta, preencha o formulário abaixo</p>
          <form action="/login/register" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

            <div class="form-group">
              <label>Seu E-mail</label>
              <input
                type="email"
                name="email"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                placeholder="Enter email"
              />
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Crie sua Senha</label>
              <input
                name="password"
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                placeholder="Password"
              />
            </div>
            <button type="submit" class="btn btn-primary">
              Criar minha Conta
            </button>
          </form>
        </div>

        <div class="col-lg">
          <h4>Faça seu Login</h4>
          <p>Se você já tem conta, faça login</p>
          <form action="/login/login" method="post">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
            <div class="form-group">
              <label>Seu E-mail</label>
              <input
                type="email"
                name="email"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                placeholder="Enter email"
              />
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Crie sua Senha</label>
              <input
                name="password"
                type="password"
                class="form-control"
                id="exampleInputPassword1"
                placeholder="Password"
              />
            </div>
            <button type="submit" class="btn btn-primary">
              Acessar minha Conta
            </button>
          </form>
        </div>
      </div>
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
